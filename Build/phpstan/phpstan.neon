includes:
  - phpstan-baseline.neon

parameters:
  phpVersion: 80200
  level: 8

  bootstrapFiles:
    - phpstan-typo3-constants.php

  paths:
    - ../../Classes
    - ../../Configuration

  inferPrivatePropertyTypeFromConstructor: true
  treatPhpDocTypesAsCertain: false

  # Use local cache dir instead of /tmp
  tmpDir: ../../.Build/cache
