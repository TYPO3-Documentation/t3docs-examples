<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>
                        LLL:EXT:examples/Resources/Private/Language/locallang_db.xlf:examples.pi_flexform.sheetGeneral
                    </sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.singlePid>
                        <TCEforms>
                            <label>
                                LLL:EXT:examples/Resources/Private/Language/PluginHaiku/locallang_db.xlf:singlePageUid
                            </label>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">
                                            LLL:EXT:examples/Resources/Private/Language/locallang_db.xlf:examples.pi_flexform.choosePage
                                        </numIndex>
                                        <numIndex index="1">0</numIndex>
                                    </numIndex>
                                </items>
                                <foreign_table>pages</foreign_table>
                                <foreign_table_where>pages.doktype = 1 ORDER BY title</foreign_table_where>
                                <minitems>0</minitems>
                                <maxitems>1</maxitems>
                            </config>
                        </TCEforms>
                    </settings.singlePid>
                    <settings.listPid>
                        <TCEforms>
                            <label>
                                LLL:EXT:examples/Resources/Private/Language/PluginHaiku/locallang_db.xlf:listPageUid
                            </label>
                            <config>
                                <type>group</type>
                                <allowed>pages</allowed>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <size>1</size>
                                <suggestOptions>
                                    <default>
                                        <additionalSearchFields>nav_title, alias, url</additionalSearchFields>
                                        <addWhere>AND pages.doktype = 1</addWhere>
                                    </default>
                                </suggestOptions>
                            </config>
                        </TCEforms>
                    </settings.listPid>
                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>
